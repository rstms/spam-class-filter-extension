{
  "manifest_version": 3,
  "version": "0.1.20",
  "author": "Matt Krueger <mkrueger@rstms.net>",
  "name": "Mail Filter Control",
  "browser_specific_settings": {
    "gecko": {
      "id": "mail-filter-control-a7cb4aeb-d2e8-4381-b738-571518ec3d0f@rstms.net",
      "strict_min_version": "128.0"
    }
  },
  "options_ui": {
    "page": "options.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "type": "module"
  },
  "action": {
    "default_title": "Mail Filter",
    "default_icon": "funnel.svg",
    "type": "menu"
  },
  "message_display_action": {
    "default_title": "Add Sender to Filter Book",
    "default_icon": "funnel.svg",
    "type": "menu"
  },
  "permissions": [
    "accountsRead",
    "compose",
    "compose.send",
    "menus",
    "messagesDelete",
    "messagesRead",
    "storage"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      }
    },
    "_execute_compose_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      }
    },
    "_execute_message_display_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      }
    },
    "select_mailfilter_book": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      }
    }
  },
  "experiment_apis": {
    "cardDAV": {
      "schema": "schema.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "paths": [
          [
            "cardDAV"
          ]
        ],
        "script": "carddav.js"
      }
    }
  }
}
