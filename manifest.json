{
  "manifest_version": 3,
  "version": "0.1.13",
  "author": "Matt Krueger <mkrueger@rstms.net>",
  "name": "Mail Filter Control Panel",
  "browser_specific_settings": {
    "gecko": {
      "id": "spam-filter-class-extension@rstms.net",
      "strict_min_version": "128.0"
    }
  },
  "options_ui": {
    "page": "options.html"
  },
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "action": {
      "default_title": "Mail Filter",
      "default_icon": "funnel.svg",
      "type": "menu"
  },
  "permissions": [
      "accountsRead",
      "compose",
      "compose.send",
      "menus",
      "messagesDelete",
      "messagesRead",
      "storage"
  ]
}
