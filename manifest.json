{
  "manifest_version": 3,
  "version": "0.0.7",
  "author": "Reliance Systems",
  "name": "Spam Filter Class Control",
  "browser_specific_settings": {
    "gecko": {
      "id": "spam-filter-class-extension@rstms.net",
      "strict_min_version": "128.0"
    }
  },
  "action": {
    "default_title": "Spam Filter Classes",
    "default_icon": {
	"16": "./assets/images/filter.svg",
	"48": "./assets/images/filter.svg",
	"128": "./assets/images/filter.svg"
    }
  },
  "options_ui": {
    "page": "editor.html",
    "open_in_tab": true,
    "browser_style": true
  },
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "permissions": [
      "menus",
      "accountsRead",
      "compose",
      "compose.save",
      "compose.send",
      "messagesDelete",
      "messagesImport",
      "messagesMove",
      "messagesRead",
      "addressBooks",
      "storage",
      "theme",
      "tabs",
      "activeTab",
      "scripting"
  ]
}
