{
  "manifest_version": 3,
  "version": "0.1.0",
  "author": "Reliance Systems",
  "name": "Spam Filter Class Control",
  "browser_specific_settings": {
    "gecko": {
      "id": "spam-filter-class-extension@rstms.net",
      "strict_min_version": "128.0"
    }
  },
  "options_ui": {
    "page": "editor.html",
    "open_in_tab": false,
    "browser_style": true
  },
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "permissions": [
      "accountsRead",
      "compose",
      "compose.send",
      "menus",
      "messagesDelete",
      "messagesRead",
      "storage"
  ]
}
